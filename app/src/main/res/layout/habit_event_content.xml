<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DEE8E8"
    android:orientation="vertical">

    <TextView
        android:id="@+id/habit_event_comment"
        android:layout_width="525dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="comment"
        android:textColor="#002440"
        android:textSize="30sp"></TextView>

    <TextView
        android:id="@+id/habit_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:text="eventDate"
        android:textColor="#002440"
        android:textSize="10sp"></TextView>

    <TextView
        android:id="@+id/habit_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="eventLocation"></TextView>


</LinearLayout>