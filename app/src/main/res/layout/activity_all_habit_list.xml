<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.AllHabitListView">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17A6A6"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My habits"
                android:textColor="#F8F9FA"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <ListView
        android:id="@+id/allhabit_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
    </ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_habit_button"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:layout_gravity="bottom|end"
        android:background="@color/teal_700"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:ignore="ContentDescription"
        android:focusable="true" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17A6A6"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/home_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#17A6A6"
                android:text="Home"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/calendar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#17A6A6"
                android:text="Calendar"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/allhabitlist_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#17A6A6"
                android:text="Habit"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#17A6A6"
                android:text="Prof"
                tools:ignore="ButtonStyle,HardcodedText" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

</LinearLayout>