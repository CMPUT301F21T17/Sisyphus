<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.EditHabitEventView">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bottom_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17A6A6"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/home_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#17A6A6"
                android:text="Home" />

            <Button
                android:id="@+id/calendar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#17A6A6"
                android:text="Calendar" />

            <Button
                android:id="@+id/allhabitlist_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#17A6A6"
                android:text="Habit" />

            <Button
                android:id="@+id/profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#17A6A6"
                android:text="Prof" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/editEventPhoto"
        android:layout_width="208dp"
        android:layout_height="92dp"

        android:layout_marginBottom="16dp"

        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/editTextLocation" />

        app:srcCompat="@android:drawable/ic_menu_crop"/>


    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="112dp"
        android:text="Confirm"
        app:backgroundTint="#17A6A6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonCancel"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="60dp"
        android:text="Cancel"
        app:backgroundTint="#17A6A6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonAdd" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="297dp"
        android:layout_height="52dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="53dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Select Date"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHabitName" />

    <TextView
        android:id="@+id/textViewHabitName"
        android:layout_width="293dp"
        android:layout_height="59dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="57dp"
        android:text="TextView"
        android:textColor="#002440"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="295dp"
        android:layout_height="52dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="55dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Select Location"
        android:inputType="textPersonName"

        app:layout_constraintBottom_toTopOf="@+id/editEventPhoto"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:errorEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextComment"
        android:layout_width="289dp"
        android:layout_height="56dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:hint="Enter Comment"
        android:backgroundTint="@color/white"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="429dp" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>