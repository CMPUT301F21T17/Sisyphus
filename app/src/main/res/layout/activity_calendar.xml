<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".View.CalendarActivity">

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </CalendarView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_events"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/calendar_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/calendar_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#17A6A6"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/calendar_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                app:backgroundTint="#17A6A6" />

            <Button
                android:id="@+id/calendar_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendar"
                app:backgroundTint="#17A6A6" />

            <Button
                android:id="@+id/calendar_habitlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habit"
                app:backgroundTint="#17A6A6" />

            <Button
                android:id="@+id/calendar_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prof"
                app:backgroundTint="#17A6A6" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


</androidx.constraintlayout.widget.ConstraintLayout>